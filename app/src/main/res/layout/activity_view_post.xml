<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="is.hopur8.braskarinn.ViewPostActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/postUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="126dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/GREY"
            android:textColorLink="@color/GREY"
            android:textSize="14sp"
            android:layout_below="@+id/postUserHeading"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/postUserHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted by:"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp"
            android:layout_marginTop="44dp"
            android:textColor="@color/GREY"
            android:layout_below="@+id/postContent"
            android:layout_alignLeft="@+id/postUser"
            android:layout_alignStart="@+id/postUser" />

        <TextView
            android:id="@+id/postContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="55dp"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/postTitle"
            android:layout_alignLeft="@+id/postUser"
            android:layout_alignStart="@+id/postUser"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/GREY"
            android:textColorLink="@color/GREY"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/postTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/postUserHeading"
            android:layout_alignStart="@+id/postUserHeading"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
