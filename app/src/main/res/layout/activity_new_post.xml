<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="is.hopur8.braskarinn.NewPostActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/newPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="57dp"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="26dp" />

        <Button
            android:id="@+id/createPostButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitPost"
            android:text="Create Post"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="420dp"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_marginBottom="21dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <EditText
            android:id="@+id/newPostContent"
            android:layout_width="335dp"
            android:layout_height="229dp"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="150dp"
            android:layout_above="@+id/createPostButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="33dp"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/newPostTitle"
            android:layout_alignLeft="@+id/newPostTitle"
            android:layout_alignStart="@+id/newPostTitle" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="126dp"
            android:layout_above="@+id/newPostContent"
            android:layout_alignLeft="@+id/newPostContent"
            android:layout_alignStart="@+id/newPostContent"
            android:layout_marginBottom="18dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
