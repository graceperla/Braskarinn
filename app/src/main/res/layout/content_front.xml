<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_front"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="is.hopur8.braskarinn.FrontActivity"
    tools:showIn="@layout/activity_front">

    <RelativeLayout
        android:id="@+id/viewAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/viewadsButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:drawableLeft="@drawable/viewads"
            android:fontFamily="monospace"
            android:text="@string/viewadsFront"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signed_out_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewAds"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/loginButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/login"
            android:fontFamily="monospace"
            android:text="@string/loginFront"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signed_in_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewAds"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="2.0">

        <Button
            android:id="@+id/logoutButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/login"
            android:fontFamily="monospace"
            android:text="@string/logoutFront"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/profileButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/logoutButton"
            android:layout_marginTop="60dp"
            android:drawableLeft="@drawable/profile"
            android:fontFamily="monospace"
            android:text="@string/profileFront"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </RelativeLayout>


</RelativeLayout>
